#!/usr/bin/env bash
#manague
if [[ "$#" == "1" ]]; then
          if [[ "$1" == "start" ]]; then
            ./manage_my_process &
            echo "$1" > /var/run/my_process.pid
            echo "manage_my_process started"
       elif [[ "$1" == "stop" ]]; then
  if [[ -f "/var/run/my_process.pid" ]]; then
    process_id=$(cat /var/run/my_process.pid)
    kill "$process_id"
    echo "manage_my_process stopped"
elif
    rm /var/run/my_process.pid; then
    echo "Good"
  fi
          elif [[ "$1" == "restart" ]]; then
            if [[ -f "/var/run/my_process.pid" ]]; then
              kill "$(cat /var/run/my_process.pid)"
            fi
            ./manage_my_process &
            echo "$1" > /var/run/my_process.pid
            echo "manage_my_process restarted"
          else
   echo "Usage: manage_my_process {start|stop|restart}"
 fi
else
  echo "Usage: manage_your_process {start|stop|restart}"
fi
